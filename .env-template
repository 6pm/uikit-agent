REDIS_HOST=redis
# Redis task history TTL in seconds (default: 14 days)
TASK_HISTORY_TTL=1209600

# Environment: local, prod, dev
ENV=local

# API keys for LLMs
OPENAI_API_KEY=your_key
GOOGLE_API_KEY=your_key
MODEL_CODEGEN=gemini-2.5-pro

# LangChain settings
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_key
LANGCHAIN_PROJECT=figma-code-gen


# Sentry
SENTRY_DSN=sentry_url

# Email for Let's Encrypt and Traefik
ACME_EMAIL=your.email@gmail.com

# Server IP address (Hetzner)
SERVER_IP=159.69.248.000



# Secret header and token for Traefik. Needed for protection against random bots.
# This header must be added to each server.
TRAEFIK_SECRET_HEADER=X-Secret-Header
TRAEFIK_SECRET_TOKEN=your_secret_token

# Google Artifact Registry stringified json key for private NPM registry authentication
GCP_NPM_TOKEN=json_stringified_service_account_key


# --- GIT & REPO SETTINGS ---

# LOCAL DEVELOPMENT VARIABLES - Uncomment these when developing locally
# Store preview projects in the temp folder inside the project directory
# WEB_REPO_PATH=./temp_repos/web
# MOBILE_REPO_PATH=./temp_repos/mobile


# PRODUCTION (VPS/Hetzner) VARIABLES
# Uncomment these when deploying to production VPS
# WEB_REPO_PATH=/repos/web
# MOBILE_REPO_PATH=/repos/mobile
GIT_SSH_KEY_PATH=/root/.ssh/id_ed25519
# Note: Locally, SSH key is not specified (Git automatically uses your system key from ~/.ssh/id_rsa)


# Repository URLs (required for both local and production)
WEB_REPO_URL=git@bitbucket.org:company/web-preview.git
MOBILE_REPO_URL=git@bitbucket.org:company/mobile-preview.git

# Vercel doesn't trigger rebuilds when user email doesn't have access to the project
# Email address that has access to build projects on Vercel (required to trigger project rebuilds)
EMAIL_WITH_VERCEL_ACCESS=user@example.com
